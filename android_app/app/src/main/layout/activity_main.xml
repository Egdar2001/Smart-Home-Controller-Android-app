<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button android:id="@+id/lightOnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn On Light"/>

    <Button android:id="@+id/lightOffButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn Off Light"/>

    <Button android:id="@+id/fanOnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn On Fan"/>

    <Button android:id="@+id/fanOffButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn Off Fan"/>

    <Button android:id="@+id/cameraOnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activate Camera"/>

    <Button android:id="@+id/cameraOffButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deactivate Camera"/>
</LinearLayout>
